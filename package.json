{
  "name": "tecno-backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start:aws": "node --experimental-specifier-resolution=node ./dist/server.js",
    "dev": "nodemon --exec ts-node server.ts",
    "build": "tsc && tsc-alias",
    "prepare": "husky install",
    "db:pull": "prisma db pull",
    "db:generate": "prisma generate",
    "db:update": "prisma migrate dev",
    "db:deploy": "prisma migrate deploy",
    "prisma:format": "prisma format",
    "lint": "eslint . --ext .ts --fix",
    "pre-commit": "lint-staged",
    "preinstall": "npx only-allow pnpm"
  },
  "packageManager": "pnpm@10.19.0",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.914.0",
    "@firebase/app-types": "^0.9.3",
    "@prisma/client": "^6.18.0",
    "cashfree-pg": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "firebase-admin": "^13.5.0",
    "helmet": "^8.1.0",
    "morgan": "^1.10.1",
    "multer": "2.0.2",
    "multer-s3": "^3.0.1",
    "nodemailer": "^7.0.10",
    "picocolors": "^1.1.1",
    "swagger-ui-express": "^5.0.1",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.9.3",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^2.0.0",
    "@types/multer-s3": "^3.0.3",
    "@types/node": "^24.9.1",
    "@types/nodemailer": "^7.0.2",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/yamljs": "^0.2.34",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint": "^9.38.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "prisma": "^6.18.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0"
  },
  "lint-staged": {
    "*.ts": [
      "pnpm lint",
      "pnpm prettier --write ."
    ],
    "*.prisma": [
      "pnpm prisma:format"
    ],
    "swagger.yaml": [
      "pnpm prettier --write ."
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "dist/**"
    ]
  }
}
